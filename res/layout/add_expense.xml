<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="7dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/editExpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtDate"
            android:layout_alignBottom="@+id/txtDate"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/txtDate"
            android:layout_toRightOf="@+id/txtDate"
            android:text="@string/date"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btnExpDate"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/editExpdate"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_other"
            android:text="@string/arrow"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtExpAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDate"
            android:layout_marginTop="30dp"
            android:layout_toLeftOf="@+id/editExpdate"
            android:layout_toStartOf="@+id/editExpdate"
            android:text="@string/amount"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/editExpAmt"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtExpAmt"
            android:layout_alignLeft="@+id/editExpdate"
            android:layout_alignStart="@+id/editExpdate"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textColor="#FFFFFF"
            android:textSize="17sp" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/btnExpAmt"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/editExpAmt"
            android:layout_alignLeft="@+id/btnExpDate"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/btnExpDate"
            android:background="@drawable/button_other"
            android:text="@string/arrow"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txtExpPayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtExpAmt"
            android:layout_alignRight="@+id/txtExpAmt"
            android:layout_below="@+id/txtExpAmt"
            android:layout_marginTop="30dp"
            android:text="@string/payer"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/editExpPayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtExpPayer"
            android:layout_alignLeft="@+id/editExpAmt"
            android:layout_alignStart="@+id/editExpAmt"
            android:ems="10"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txtExpCatg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtExpPayer"
            android:layout_alignRight="@+id/txtExpPayer"
            android:layout_below="@+id/txtExpPayer"
            android:layout_marginTop="30dp"
            android:text="@string/catg"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/editExpCatg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtExpCatg"
            android:layout_alignBottom="@+id/txtExpCatg"
            android:layout_alignLeft="@+id/editExpPayer"
            android:layout_alignStart="@+id/editExpPayer"
            android:text="@string/catg"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txtPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtExpCatg"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignStart="@+id/txtExpCatg"
            android:layout_below="@+id/txtExpCatg"
            android:layout_marginTop="26dp"
            android:text="@string/pay"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="90dp"
            android:layout_marginStart="79dp"
            android:layout_marginTop="30dp"
            android:text="@string/date"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <Spinner
            android:id="@+id/spnExpPay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtPay"
            android:layout_alignLeft="@+id/editExpCatg"
            android:layout_alignStart="@+id/editExpCatg"
            android:layout_below="@+id/editExpCatg"
            android:entries="@array/frequency"
            android:popupBackground="@color/list_background" />

        <TextView
            android:id="@+id/txtExpDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtExpCatg"
            android:layout_alignRight="@+id/txtExpCatg"
            android:layout_below="@+id/txtPay"
            android:layout_marginTop="30dp"
            android:text="@string/desc"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/editIncDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtExpDesc"
            android:layout_alignStart="@+id/txtExpDesc"
            android:layout_below="@+id/txtExpDesc"
            android:ems="10"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <ImageButton
            android:id="@+id/btnExpCam"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/editIncDesc"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:contentDescription="Attach Image"
            android:src="@drawable/ic_camera" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnCncl"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="35dp"
            android:background="@drawable/button_other"
            android:text="@string/back"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnOk"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/button_other"
            android:text="@string/ok"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>
